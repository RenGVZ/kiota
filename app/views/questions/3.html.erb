<h1 class="text-center">Where do you work?</h1>
<%= simple_form_for(@user, url: question_update_path) do |f| %>
  <div class="form-group text-center">
    <div class="justify-content-center">
     <%= text_field(:user, :work_location) %>
     <%= f.submit "Next", class: "btn btn-dark" %>
    </div>
  </div>
<% end %>
<%= render 'shared/question_layout' %>