<div class="theme">
  <div class="img-box">
    <div class= "white-box">
      <p>Tell us about yourself</p>
      <div class="progress-bar">
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
      </div>
    </div>
  </div>
  <div class="question-box">
    <h1 class="text-center question" style="font-size: 25px">Now let's talk about priorities, do you like going out for coffee or for beer?</h1>
    <div class="button-div" style="text-align: center">
      <%= form_for(@user, url: question_update_path) do |f| %>
        <div class="justify-content-center">
          <%= f.check_box :wants_bar_nearby, checked: true, hidden: true %>
          <%= f.submit "Beer", class: "choice-button" %>
        </div>
      <% end %>

      <%= form_for(@user, url: question_update_path) do |f| %>
        <div class="justify-content-center">
          <%= f.check_box :wants_cafe_nearby, checked: true, hidden: true %>
          <%= f.submit "Coffee", class: "choice-button" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'shared/question_layout' %>
</div>