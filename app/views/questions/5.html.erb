<div class="theme">
  <div class="img-box">
    <div class= "white-box">
      <p>Tell us about yourself</p>
      <div class="progress-bar">
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
      </div>
    </div>
  </div>
  <div class="question-box">
    <h1 class="text-center question">Are you afraid of heights?</h1>
    <div class="button-div">
      <%= simple_form_for(@user, url: question_update_path) do |f| %>
          <%= f.input :wants_first_floor, input_html: { value: true }, as: :hidden, wrapper_html: {class: "m-0"} %>
          <%= f.submit "Terrified", class: "choice-button" %>  
      <% end %>
      <%= simple_form_for(@user, url: question_update_path) do |f| %> 
          <%= f.input :wants_first_floor, input_html: { value: false }, as: :hidden, wrapper_html: {class: "m-0"} %>
          <%= f.submit "No problem", class: "choice-button" %>
      <% end %>
    </div>
  </div>
  <%= render 'shared/question_layout' %>
</div>