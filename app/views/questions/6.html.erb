<div class="theme">
  <div class="img-box">
    <div class= "white-box">
      <p>Tell us about yourself</p>
      <div class="progress-bar">
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="green-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
        <div class="purple-bar"></div>
      </div>
    </div>
  </div>
  <div class="question-box">
    <h1 class="text-center question">Are you a fan of jogging?</h1>
    <div class="button-div"style="text-align: center;">
      <%= form_for(@user, url: question_update_path) do |f| %>
        <div class="justify-content-center">
          <%= f.check_box :wants_park_nearby, checked: true, hidden: true %>
          <%= f.submit "Yes", class: "choice-button" %>
        </div>
      <% end %>

      <%= form_for(@user, url: question_update_path) do |f| %>
        <div class="justify-content-center">
          <%= f.check_box :wants_park_nearby, checked: false, hidden: true %>
          <%= f.submit "No", class: "choice-button" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'shared/question_layout' %>
</div>