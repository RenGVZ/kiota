<h1 class="text-center">Do you mainly cook at home or do you eat out?</h1>
<div style="text-align: center">
  <%= form_for(@user, url: question_update_path) do |f| %>
    <div class="justify-content-center mb-3">
      <%= f.check_box :wants_supermarket_nearby, checked: true, hidden: true %>
      <%= f.submit "I cook", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= form_for(@user, url: question_update_path) do |f| %>
    <div class="justify-content-center">
      <%= f.check_box :wants_supermarket_nearby, checked: false, hidden: true %>
      <%= f.submit "I eat out", class: "btn btn-dark" %>
    </div>
  <% end %>
</div>

<%= render 'shared/question_layout' %>