
<div class="containe" style="text-align: center; margin-bottom: 6rem; margin: 1rem; margin-top: 4rem; color: rgba(186, 0, 217);">
    <h2 >Make your reservation</h2>
      <%= form_for @user, url: profile_path, class: "form-control" do |f| %>
      <div style="text-align: center;margin: 1rem; ">Chose your available day</div>
      <%= f.fields_for :availability do |fa| %>
        <% time_options = options_for_select(%w[8:00 9:00 10:00 11:00 12:00 13:00 14:00 15:00 16:00 17:00 18:00 19:00 20:00]) %>
        <% Date::DAYS_INTO_WEEK.each do |day_name, day_index| %>

        <div class="row" >
          <div class="col-1">
            <input class="checkbox" type="checkbox" class="form-check-input">
          </div>
          <div class="col-4">
            <%= day_name.to_s.capitalize %>
          </div>
          <%= fa.fields_for day_name do |fa_day| %>
            <div class="col-3">
              <%= fa_day.select :start, time_options %>
            </div>
            <div class="col-1"> - </div>
            <div class="col-3">
              <%= fa_day.select :end, time_options %>
            </div>

        <div>
          <input class="checkbox" type="checkbox" class="form-check-input"> <%= day_name.to_s.capitalize %>
          <%= fa.fields_for day_name do |fa_day| %>
          <%= fa_day.select :start, time_options %>-  <%= fa_day.select :end, time_options %>

          <% end %>
        </div>
        <% end %>
      <% end %>

  <a class="btn" type="button" data-toggle="collapse" href="#moreinfo" role="button"aria-controls="multiCollapseExample1" style="text-align: center; margin-top: 3rem; background-color: rgba(186, 0, 217, 0.6);">Add more info</a>
    <div class="row">
      <div class="col">
        <div class="collapse multi-collapse" id="moreinfo">
          <div class="card card-body" style="background-color: rgba(0, 0, 0, 0);">
            <div class="Questions" style="text-align: center;margin-top: 2rem;">
              <div><%= f.label :first_name %></div>
              <div><%= f.text_field :first_name%></div>
              <div style="margin-top: 1rem;"><%= f.label :last_name%></div>
              <div><%= f.text_field :last_name%></div>
              <div style="margin-top: 1rem;"><%= f.label :birthday%></div>
              <div class="drop_down" ><%= f.date_select :dob , {:start_year => 1980, :end_year => 2000}%></div>
              <div style="margin-top: 1rem;"><%= f.label :address%></div>
              <div><%= f.text_field :address %></div>
              <div style="margin-top: 1rem;"><%= f.label :when_do_you_want_to_start_to_live%></div>
              <div class="drop_down"><%= f.date_select :start_date %></div>
              <div style="margin-top: 1rem;"><%= f.label :phone_number%></div>
              <div><%= f.text_field :phone_number %></div>
              <div style="margin-top: 1rem;"><%= f.label :registration_card_number %></div>
              <div><%= f.text_field :registration_card_number %></div>
              <div style="margin-top: 1rem;"><%= f.label :salary %></div>
              <div><%= f.number_field :salary %></div>
              <div style="margin-top: 1rem;"><%= f.label :employer_name %></div>
              <div><%= f.text_field :employer_name %></div>
              <div style="margin-top: 1rem; "><%= f.submit "Submit", class: "btn" %></div>
            <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
