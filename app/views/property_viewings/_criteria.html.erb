<div class="feed-criteria">
  <h2 class="header">Things you'll love</h2>

  <div class="feed-criteria-description d-flex">
    <% if @pets_tag %>
      <div class="button-pill">
        <i class="fas fa-dog"></i>
        <div class="button-pill-info">
          <p>Pet friendly</p>
        </div>
      </div>
    <% else %>
    <% end %>

    <% if @bar_tag %>
      <div class="button-pill">
        <i class="fas fa-beer"></i>
        <div class="button-pill-info">
          <p>Many bars nearby</p>
        </div>
      </div>
    <% else %>
    <% end %>
  </div>

  <div class="feed-criteria-description d-flex">
    <% if @cafe_tag %>
      <div class="button-pill">
        <i class="fas fa-coffee"></i>
        <div class="button-pill-info">
          <p>Many cafes nearby</p>
        </div>
      </div>
    <% else %>
    <% end %>

    <% if @floor_tag %>
      <div class="button-pill">
        <i class="fas fa-home"></i>
        <div class="button-pill-info">
          <p>First floor</p>
        </div>
      </div>
    <% else %>
    <% end %>
  </div>
  
  <div class="feed-criteria-description d-flex">
    <% if @supermarket_tag %>
      <div class="button-pill">
        <i class="fas fa-store"></i>
        <div class="button-pill-info">
          <p>Close to market</p>
        </div>
      </div>
    <% else %>
    <% end %>

    <% if @park_tag %>
      <div class="button-pill">
        <i class="fas fa-shoe-prints"></i>
        <div class="button-pill-info">
          <p>Close to park</p>
        </div>
      </div>    
    <% else %>
    <% end %>
  </div>
  <div class="feed-criteria-description d-flex">
    <% if @zero_key_money_tag %>
    <div class="button-pill">
      <i class="fas fa-times-circle"></i>
      <div class="button-pill-info">
        <p>No key money</p>
      </div>
    </div>      
    <% else %>
    <% end %>
  </div>
</div>